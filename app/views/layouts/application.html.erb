<!DOCTYPE html>
<html>
<head>
  <title>Storifypenn</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="brand" href="/">StorifyPenn</a>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li class="<%= 'active' if current_page?(:controller => 'locations') %>"><%= link_to "Locations", locations_path %></li>
              <li class="<%= 'active' if current_page?(:controller => 'users') %>"><%= link_to "Users", users_path %></li>
              <li class="<%= 'active' if current_page?(:controller => 'contracts') %>"><%= link_to "Contracts", contracts_path %></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container">
    	<%= yield %>
    </div>
</body>
</html>

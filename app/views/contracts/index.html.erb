<h2>Past contracts</h2>

<table class="table table-hover">
  <tr>
    <th>Seller user</th>
    <th>Buyer user</th>
    <th>Location</th>
    <th>Begin</th>
    <th>End</th>
    <th>Rate</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contracts.each do |contract| %>
  <tr>
    <td><%= contract.seller_name %></td>
    <td><%= contract.buyer_name %></td>
    <td><%= contract.location_addr %></td>
    <td><%= contract.begin %></td>
    <td><%= contract.end %></td>
    <td><%= contract.rate %></td>
    <td><%= link_to 'Show', location_contract_path(@location.id, contract.id) %></td>
    <td><%= link_to 'Edit', edit_location_contract_path(@location.id, contract) %></td>
    <td><%= link_to 'Destroy', location_contract_path(@location.id, contract.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />


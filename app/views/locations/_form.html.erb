<%= form_for(@location) do |f| %>
  <% if @location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% @location.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :zipcode %><br />
    <%= f.text_field :zipcode %>
  </div>
  <div class="field">
    <%= f.label :rate %><br />
    <%= f.number_field :rate %>
  </div>
  <div class="field">
    <%= f.label :ac, "Amenities" %><br />
    <%= f.check_box :ac %> <b>A/C</b> <br />
    <%= f.check_box :dehumidifier %> <b>Dehumidifier</b> <br />
  </div>
  <div class="field">
    <%= f.label :available %><br />
    <%= f.radio_button :available, true %> Yes <br />
    <%= f.radio_button :available, false %> No
  </div>
  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.collection_select :user_id, User.all, :id, :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

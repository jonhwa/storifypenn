<% content_for(:head) do %>
  <%= javascript_tag do %>
    window.booked = <%= raw @booked %>
  <% end %>
<% end %>

<p id="notice"><%= notice %></p>

<h3 class="no-bottom-margin"><%= @location.address %></h3>
<h5 class="no-top-margin"><%= @location.lower_address() %></h5>

<div class="row">
  <div class="span9">
    <legend>Availability</legend>
    <span id="available"></span>

    <div style="width: 500px;">
      <legend>Features</legend>
      <table class="table table-bordered center">
        <thead>
          <tr>
            <th style="width: 125px;">A/C</th>
            <th style="width: 125px;">Dehumidifier</th>
            <th style="width: 125px;">Alarm</th>
            <th style="width: 125px;">Basement</th>
          </tr>
        </thead>
        <tbody>
          <tr style="height: 40px;">
            <td><% if @location.ac %>
              <i class="icon-ok"></i>
              <% end %>
            </td>
            <td><% if @location.dehumidifier %>
              <i class="icon-ok"></i>
              <% end %>
            </td>
            <td><% if @location.alarm %>
              <i class="icon-ok"></i>
              <% end %>
            </td>
            <td><% if @location.basement %>
              <i class="icon-ok"></i>
              <% end %>
            </td>
          </tr>
        </tbody> 
      </table>
    </div>
  </div>
  <div class="span3">
    <legend>Price</legend>
    <div class="price sidebar">
      <sup>$</sup><%= number_with_precision(@location.rate, :precision => 2) %>
      <div class="light">Per sqft per month</div>
      <%= link_to 'Book this space', new_location_contract_path(@location.id), :class => 'btn btn-large btn-primary' %>
    </div>

    <legend>Seller</legend>
    <%= @location.user_name %>
  </div>
</div>

<%= link_to 'Edit', edit_location_path(@location) %> |
<%= link_to 'Back to search results', search_path(session[:search]) %>